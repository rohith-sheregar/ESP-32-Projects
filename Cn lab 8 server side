import java.net.*;
import java.util.*;

public class DatagramSocketServer {
    public static void main(String[] args) throws Exception {
        Scanner in = new Scanner(System.in);

        // Create server socket on port 9000
        DatagramSocket serverSocket = new DatagramSocket(9000);

        byte[] receiveData = new byte[1024];
        byte[] sendData = new byte[1024];

        System.out.println("*** Server Side ***");

        // First, receive initial packet from client
        DatagramPacket receivePacket = new DatagramPacket(receiveData, receiveData.length);
        serverSocket.receive(receivePacket);
        System.out.println("Client connected: " + new String(receivePacket.getData()));

        // Get client IP address and port
        InetAddress IPAddress = receivePacket.getAddress();
        int port = receivePacket.getPort();

        // Loop to keep sending messages to client
        while (true) {
            System.out.print("Type some message to display at client end: ");
            String message = in.nextLine();

            sendData = message.getBytes();

            System.out.println("Message sent from the server: " + message);

            // Create send datagram packet
            DatagramPacket sendPacket = new DatagramPacket(sendData, sendData.length, IPAddress, port);

            // Send the packet using server socket
            serverSocket.send(sendPacket);
        }
    }
}
